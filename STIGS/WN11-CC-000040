# Fix STIG: Disable insecure guest logons

$regPath = "HKLM:\SOFTWARE\Policies\Microsoft\Windows\LanmanWorkstation"
$valueName = "AllowInsecureGuestAuth"

# Ensure the path exists
if (-not (Test-Path $regPath)) {
    New-Item -Path $regPath -Force | Out-Null
}

# Set the DWORD value to 0
Set-ItemProperty -Path $regPath -Name $valueName -Value 0 -Type DWord

Write-Host "Configured: AllowInsecureGuestAuth set to 0 (Disabled)."
