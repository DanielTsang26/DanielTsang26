# STIG V-253362 - Hardened UNC Paths Check + Auto-Fix

$regPath = "HKLM:\SOFTWARE\Policies\Microsoft\Windows\NetworkProvider\HardenedPaths"
$requiredValue = "RequireMutualAuthentication=1, RequireIntegrity=1"
$entries = @("\\*\SYSVOL", "\\*\NETLOGON")

# Ensure path exists
if (-not (Test-Path $regPath)) {
    New-Item -Path $regPath -Force | Out-Null
}

foreach ($entry in $entries) {
    $current = (Get-ItemProperty -Path $regPath -Name $entry -ErrorAction SilentlyContinue).$entry

    if ($current -ne $requiredValue) {
        Write-Host "Non-compliant: $entry â†’ fixing..." -ForegroundColor Yellow
        Set-ItemProperty -Path $regPath -Name $entry -Value $requiredValue -Type String
    } else {
        Write-Host "Compliant: $entry is correctly set."
    }
}

Write-Host "Hardened UNC Paths check & remediation completed."
